{{#if productos}}
<table class="table table-bordered table-hover table-dark">
    <thead>
        <tr class="text-center">
            <th>Num. <i class="bi bi-list-ol"></i></th>
            <th>Nombre Libro <i class="bi bi-journals"></i></th>
            <th>Descripción <i class="bi bi-list-columns-reverse"></i></th>
            <th>Precio Compra <i class="bi bi-currency-dollar"></i></th>
            <th>Precio Venta <i class="bi bi-currency-dollar"></i></th>
            <th>Acciones <i class="bi bi-journal-code"></i></th>
        </tr>
    </thead>
    <tbody>
        {{#each productos}}  <! ––« el each recorre, pasa los parametros y muestra«––>
            <tr>
                <td>{{@index}}</td>
                <td>{{nombre}}</td> 
                <td>{{descripcion}}</td> 
                <td>{{precio}}</td> 
                <td>{{precioVent}}</td> 
                <td>
                    {{#if opcion}} 
                        <a href="/status/{{_id}}" class="btn btn-warning btn-sm mt-2">No Disponible</a>
                    {{else}} 
                        <a href="/status/{{_id}}" class="btn btn-success btn-sm mt-2">Disponible</a>
                    {{/if}}       
                    <a href="/update/{{_id}}" class="btn btn-info  btn-sm mt-2">Actualizar</a>
                    <a href="/delete/{{_id}}" class="btn btn-danger btn-sm mt-2">Eliminar</a>   
                </td>
            </tr>
            
        {{/each}}

        

    </tbody>
</table>

{{else}} 
    <div class="h-100 d-flex aling-items-center justify-content-center">
        <div class="text-center text-white">
            <h1>No Hay Libros</h1> 
            <img src="/icons/file.png" class="w-75">
        </div> 
    </div>
{{/if}}


